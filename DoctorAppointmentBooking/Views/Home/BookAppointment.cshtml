    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
<style>
    .div-group .para {
        background-color: burlywood;
        border: none;
        color: white;
        padding: 15px 60px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        cursor: pointer;
        float: left;
    }
    /*body {
        background-color: aliceblue;
    }*/
     .div-group .para:hover {
        background-color: darkslateblue ;
     }

    .button {
        display: inline-block;
        border-radius: 2px;
        background-color: brown;
        border: none;
        color: #FFFFFF;
        text-align: center;
        font-size: 18px;
        padding: 7px;
        width: 120px;
        transition: all 0.5s;
        cursor: pointer;
        margin-top: -10%;
        margin-left: 74%;
    }

    .button span {
        cursor: pointer;
        display: inline-block;
        position: relative;
        transition: 0.5s;
    }

            .button span:after {
                content: '\00bb';
                position: absolute;
                opacity: 0;
                top: 0;
                right: -20px;
                transition: 0.5s;
            }

        .button:hover span {
            padding-right: 15px;
        }

        .button:hover span:after {
            opacity: 1;
            right: 0;
        }
</style>
    </head>
